{
  "name": "hidrate-se",
  "productName": "Hidrate-se",
  "version": "1.0.0",
  "description": "Aplicativo para lembrar de beber água com detecção via câmera",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "download-models": "node download-tf-models.js",
    "prestart": "npm run download-models",
    "dist": "electron-builder --mac",
    "postinstall": "npm run download-models"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "electron-icon-builder": "^2.0.1"
  },
  "dependencies": {
    "@tensorflow/tfjs-backend-cpu": "^4.22.0",
    "@tensorflow/tfjs-backend-wasm": "^4.22.0",
    "electron-store": "^10.0.1",
    "moment": "^2.30.1",
    "node-schedule": "^2.1.1"
  },
  "build": {
    "appId": "com.hidratese.reminder",
    "productName": "Hidrate-se",
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "extraResources": [
      {
        "from": "assets",
        "to": "assets"
      },
      {
        "from": "models",
        "to": "models"
      }
    ],
    "directories": {
      "output": "dist"
    }
  }
}
